{
  "ConnectionStrings": {
    "UserApplicationDatabase": "Data Source=userapplications.db",
    "IdentityDatabase": "Server=your_sql_server;Database=user_db;Trusted_Connection=True;",
    "AzureBlobStorage": "your_blob_storage_connection_string"
  },
  "AvatarSettings": {
    "BlobContainerName": "avatars",
    "FileSystemStoragePath": "wwwroot/avatars",
    "AvatarStorageStrategy": "Blob" // or "Database" or "FileSystem",
  },
  "JwtSettings": {
    "Key": "SECRET_JWT_KEY_HERE_SHOULD_BE_LONG",
    "Issuer": "Kcd.Api",
    "Audience": "KcdUser",
    "EmailConfirmation": "false",
    "DurationInMinutes": 60
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} ({SourceContext}){NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}